				<li><a n:href="Homepage:links">Odkazy a&nbsp;zdroje</a></li>
			</ul>
		</div>
		<div class="col content">
			<div n:foreach="$flashes as $flash" n:class="flash, $flash->type">
				{$flash->message}
			</div>
			{include content}
		</div>
	</div>
	<div class="row">
		<div class="col footer">
			© Ondřej Marek, 2014, provozuje <a href="http://baraja.cz">Baraja</a>.
		</div>
	</div>
